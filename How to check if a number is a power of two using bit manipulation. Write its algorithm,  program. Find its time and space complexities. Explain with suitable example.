public class PowerOfTwo {
    
    // Function to check if a number is a power of two using bit manipulation
    public static boolean isPowerOfTwo(int n) {
        // A number is a power of two if it's greater than 0 and n & (n - 1) is 0
        return n > 0 && (n & (n - 1)) == 0;
    }

    public static void main(String[] args) {
        int number = 16;  // Example input
        System.out.println(number + " is a power of two: " + isPowerOfTwo(number));  // Output: true
    }
}
